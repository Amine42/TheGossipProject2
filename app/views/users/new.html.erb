
<%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag 'Your first name' %>
    <%= text_field_tag 'first_name' %>
    <br /> <br />

    <%= label_tag 'Your last name' %>
    <%= text_field_tag 'last_name' %>
    <br /> <br />

    <%= label_tag 'Your email' %>
    <%= text_field_tag 'email' %>
    <br /> <br />

    <%= label_tag 'Your password' %>
    <%= text_field_tag 'password' %>
    <br /> <br />

    <%= submit_tag "Create User" %>

<% end %>

<h1>Création de compte</h1>

<div class="col-6">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
        <div>
            <label for="first_name">Nom</label>
            <input type="text" name="first_name" class="form-control">
        </div>

        <div class="form-group">
            <label for="last_name">Prénom</label>
            <textarea name="last_name" class="form-control"></textarea>
        </div>

        <div>
            <label for="email">Email</label>
            <input type="text" name="email" class="form-control">
        </div>

        <div class="form-group">
            <label for="password">Mots de passe</label>
            <textarea name="password" class="form-control"></textarea>
        </div>
        <input type="submit" class="btn btn-primary" value="Crée un compte">
    <% end %>
</div>
